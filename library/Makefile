# makefile

.PHONY: help library

help:
	@echo "Makefile commands:"
	@echo "build-library"
	@echo "start-library"
	@echo "stop-library"

build-library:
	@echo "Building Docker Image... ğŸ³"
	docker build -t library .
	@echo "Done! âœ¨"
start-library:
	@echo "Start library... âš¡ï¸ "
	docker run -p 6006:6006 -d library
	@docker ps
	@echo "Done! âœ¨"
	@echo "Storybook Library is running on http://localhost:6006 ğŸŒ"
stop-library:
	@echo "Stopping Library ğŸ›‘"
	docker ps -a -q  --filter ancestor=library
	@echo "Done! âœ¨"
	@echo "Sucessfully stopped Library"



